page
{
  width:100%;
  height:100%;
}
.scroll
{
  width: 100%;
  height:100%;
}
.container
{
  display: flex;
  justify-content:space-between;
  flex-wrap:wrap;
  width:710rpx;
  padding:30rpx 20rpx;

}
.wraper
{ 
  position: relative;
  margin-bottom:20rpx;
  width:48%;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border: 1px solid rgba(204,204,204, 0.3);
}
.img image
{
  width:220rpx;
  height:280rpx;
  box-shadow: 10px 10px 10px #ccc
}
.bookName
{ 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  padding:30rpx;
  font-size: 12px;
  color:#333;
}
.icon
{
  position: absolute;
  top:-24rpx;
  left:-24rpx;
  width:48rpx;
  height:48rpx;
}
.loading
{
  position: fixed;
  left:50%;
  top:50%;
  background: #fff;
  width:200rpx;
  height: 200rpx; 
  margin: -100rpx; 
}