page{
  width:100%;
}
.container
{
  width:710rpx;
  padding:20rpx;
}
.header
{
  width:100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 30rpx;
  border-bottom:2px solid #eee;
}
.header-t
{
  display: flex;
  justify-content: space-around;
}
.header-t image
{
  width: 220rpx;
  height:280rpx;
  padding: 0 20rpx 0 0;
}
.header-t .inform
{ 
  width: 470rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items:flex-start;
}
.inform .title
{
  font-size: 13px;
  font-weight:bold;
  color:#333;
}
.inform .same
{
  font-size:12px;
  color:#888;
}
.header-b
{
  margin-top:40rpx;
  display: flex;
  justify-content: space-between;
  
}
.header-b button
{
  margin:0;
  font-size: 12px;
  color:#333;
  width: 300rpx;
}
.desc
{ 
  width:100%;
  padding-top:20rpx;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  border-bottom:1px solid #eee;
}
.desc .desc-title
{
  font-size:16px;
  font-weight:700;
  color:#333;
  padding-bottom:30rpx;
}
.desc .desc-content
{
  height: 230rpx;
  font-size:13px;
  color:#888;
  line-height: 1.5;
}
.toggleDesc
{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:5;
  overflow:hidden;
}
.catalog
{
  width:100%;
  padding:10rpx;
  display: flex;
  justify-content:space-between;
  border-bottom:2px solid #eee;

}
.catalog .title
{ 
  font-size:14px;
  font-weight:700;
  color:#333;
  line-height: 2;
}
.catalog .same1
{
  font-size:12px;
  color:#888;
}
.catalog .same
{
  font-size:12px;
  color:#888;
  display: flex;
  align-items: center;
}
.btn
{
  width:100%;
  position: fixed;
  left:0;
  bottom:20rpx;
  right: 0;
}
.btn button
{
  margin:30rpx 30rpx;
  color:#fff;
  background: #3867D3;
  font-size:14px;
}
.loading
{
  position: fixed;
  left:50%;
  top:50%;
  background: #fff;
  width:200rpx;
  height: 200rpx; 
  margin: -100rpx; 
}
 