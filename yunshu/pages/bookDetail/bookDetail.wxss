@import "../../static/iconfont/iconfont.wxss";
.book .menu
{
  position: fixed;
  left:0;
  right:0;
  bottom:0;
  background:#fff;
  display: flex;
  justify-content: space-between;
  border-top:1px solid #f1f1f1;
  height:100rpx;
  line-height: 100rpx;
  z-index: 998;
}
.wemark
{
  padding:0 20rpx;
}
.menu .iconfont
{
  flex:1;/*查下*/
  text-align: center;
  font-size: 20px;

}
.menu .iconfont:active
{
   background:#888;
}
.catalog-menu 
{
  position: fixed;
  left:0;
  top:0;
  bottom:100rpx;
  width:650rpx; 
  z-index: 996;
  background: #f1f1f1;
  border: 1px solid #f1f1f1;
  transform: translate3d(-100%,0,0);
  transition:transform 0.5s ease;
  
}
.book .showCatalog-menu
{
 transform:translate3d(0,0,0);
}
.catalog-menu .catalog-item
{
  font-size: 15px;
  color:#333;
  line-height: 2.5;
  padding-left:20rpx;
  border-bottom:2px solid #fff;

}
.catalog-item:active
{
  background-color:#888;
}
.mask
{
  position: fixed;
  left:0;
  right:0;
  top:0;
  bottom:0;
  z-index:800;
  background:rgb(0,0,0);
  opacity: 0.2;
}
.loading
{
  position: fixed;
  left:50%;
  top:50%;
  background: #fff;
  width:200rpx;
  height: 200rpx; 
  margin: -100rpx; 
}
