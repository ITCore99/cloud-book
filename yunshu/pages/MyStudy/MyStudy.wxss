page{
  width:100%;
}
.wrapper
{
  height:100%;
}
.container
{
  width:710rpx;
  height:280rpx;
  margin: 0 20rpx 40rpx 20rpx;
  padding: 0 0 20rpx 0;
  display: flex;
  justify-content: space-between;
  border: 1px solid rgba(204, 204,204, 0.3);
}
.bookImg image
{
  width:220rpx;
  height:280rpx;
}
.contents
{ 
  width: 490rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:0 15rpx;
}
.contents .title
{
  font-size: 12px;
  color:#000;
}
.contents .desc
{
  color:#aaa;
  font-size: 12px;
}
.progressShow
{
  display: flex;
  justify-content: space-between;
  font-size: 10px;
  color:#aaa
}
.progressShow progress
{
  width:300rpx;
}
.record
{
  display: flex;
  justify-content: space-between;
  font-size:9px;
  color:#aaa;
}
.btn
{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.btn button
{ 
  font-size: 12px;
  width:200rpx;
  height:60rpx;
}
.bottomTips
{
  display: flex;
  justify-content:center;
  padding-bottom:20rpx;
}
.tip
{
  text-align:center;
  font-size: 14px;
  color:#ccc;
}
.loading
{
  position: fixed;
  left:50%;
  top:50%;
  background: #fff;
  width:200rpx;
  height: 200rpx; 
  margin: -100rpx; 
}