<view>
    <image src="/imgs/Wedges-3s-200px.svg" class="loading" wx:if="{{isLoading}}"></image>
    <view class="container" wx:else>
    <view class="wrapper">
      <view class="impress">
        <image src="{{userInfo.avatarUrl}}"></image>
    </view>
    <view class="descSelf">
        <text class="name">{{userInfo.nickName}}</text>
        <text class="infomation"bindtap="UNDO">这家伙很懒，什么也没留下</text>
        <view class="collectionNotic">
            <view class="collection" bindtap="jumpCollect">
                <text>{{collectNum}}</text>
                <text>收藏</text>
            </view>
            <view class="notic" bindtap="UNDO">
                 <text>4</text>
                 <text>关注</text>
            </view>
        </view>
    </view>  
    </view>
</view>
</view>
