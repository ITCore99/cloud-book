page
{
  width:100%;
}
.container
{
  padding: 10rpx 20rpx;
}
.catalogTitle
{
  text-align: center;
  padding-bottom:40rpx;
  border-bottom: 1px solid #ccc;
}
.catalogTitle .title
{
  font-size: 16px;
  font-weight:700;
  color:#333;
}
.catalogItem
{
   border-bottom:1px solid #ccc;
   font-size:15px; 
   padding-left:6px;
   line-height: 2.5;
}
.catalogItem:active
{
  background: #888;
}
.catalogItem .catalogContent
{
  font-size:14px;
  color:#333;
  line-height: 2;
}
.loading
{
  position: fixed;
  left:50%;
  top:50%;
  background: #fff;
  width:200rpx;
  height: 200rpx; 
  margin: -100rpx; 
}
